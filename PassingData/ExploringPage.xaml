<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PassingData.ExploringPage" Title="Select the ones you want">
    <ContentPage.Content>
		<StackLayout HorizontalOptions="Center" VerticalOptions="Start">
			<Label x:Name="introText" />
			<ScrollView>
				<ListView x:Name="AuthorityListView" VerticalOptions="FillAndExpand" HasUnevenRows="True" ItemTapped="Authority_Selected"> 
			<!-- <ListView x:Name="AuthorityListView" ItemsSource="{Binding OtherAuthorities}" ItemTapped="Authority_Selected">  -->
				<ListView.ItemTemplate>
					<DataTemplate>
						<ViewCell>
							<StackLayout Orientation="Vertical" VerticalOptions="FillAndExpand" Spacing="4">
								<Label Text="{Binding TagLabel }" />	
								<StackLayout Orientation="Horizontal" VerticalOptions="FillAndExpand" >
									<Label Text="Selected? " />
									<Label Text="{Binding Selected }" />	
								</StackLayout>
							</StackLayout>			
						</ViewCell>
					</DataTemplate>
				</ListView.ItemTemplate>
			</ListView>
			</ScrollView>	
			<Button StyleClass="DoneButton" Clicked="DoneButton_OnClicked" />
		</StackLayout>
    </ContentPage.Content>
</ContentPage>